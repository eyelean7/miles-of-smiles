<% content_for(:title, "Miles of Smiles | Packages") %>

<h1>Available Packages</h1>

  <% @packages.each do |package| %>
    <div class="well">
      <h4><%= link_to package.name, package_path(package) %></h4>
      <p><%= package.description %></p>
      <footer>$<%= package.price %></footer>
    </div>
  <% end %>
