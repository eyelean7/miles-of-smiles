<%= render "layouts/errors", :object => @package %>


<%= form_for @package do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %><br>
  <%= f.submit  %>
<% end %>
